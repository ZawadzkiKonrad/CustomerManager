@model MasterDev.Application.ViewModels.Klient.NewKlientVm

@{
    ViewData["Title"] = "EditKlient";
}

<h1>EditKlient</h1>

<h4>NewKlientVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditKlient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                
                <input type="hidden" asp-for="Id" class="form-control" />
               
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label"></label>

                @*<input asp-for="BirthYear" class="form-control" />*@

                <select asp-for="BirthYear" id="list2" class="form-control">
                    <option>Please select one</option>
                </select>

                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    var sel2 = document.getElementById('list2');
for (var i = 1901; i <= 2019; i++) {
  var opt = document.createElement('option');
  opt.text = i;
  opt.value = i;
  sel2.appendChild(opt);
}
</script>
}
